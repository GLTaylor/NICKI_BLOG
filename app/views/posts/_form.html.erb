<div class="container">
  <%= simple_form_for (@post) do |f| %>
  <div class="new-form">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </br>
    <%= f.input :body, :as => :text, :input_html => { 'rows' => 10}, :required => true %>
  </div>

  <%= f.submit "Add this blog post", class: "btn btn-primary" %>
  <% end %>
</div>
