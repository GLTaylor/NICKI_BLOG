<!DOCTYPE html>
<html>
  <head>
    <title>NICKI Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color: #3B3E44";>
    <div class="navbar-wagon">
    <em>Nicki Hinz's Awesome Blog</em>
      <div class="navbar-wagon-right">
        <%= link_to "Add a new blog post", new_post_path %>
      </div>
    </div>
    <%= yield %>
    <%= javascript_include_tag "application" %> <!-- from app/assets/javascripts/application.js -->
    <%= javascript_pack_tag "application" %>    <!-- from app/javascript/packs/application.js -->
  </body>
</html>
